body
  font-family: Helvetica, sans-serif
  line-height: 1.7em;
  background-color: #333
  color: #fff

ul
  padding-left: 30px

li
  list-style-type: none

img.dir
  padding: 0 10px
  cursor: pointer

span
  color: #f00

a
  text-decoration: none
  color: #fff
  &:hover
    text-decoration: underline
  &:visited
    color: #fff

.breadcrumbs
  overflow: hidden
  margin: 5px 0
  li
    float: left

hr
  clear: both
